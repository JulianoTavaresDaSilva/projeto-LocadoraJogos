# Scripts Linux (LF)
/gradlew text eol=lf

# Scripts Windows (CRLF)
*.bat text eol=crlf

# Arquivos binários
*.jar binary


# CONFIGURAÇÃO DO LINGUIST (PARA ESTATÍSTICAS DO GITHUB)

# Marca arquivos .java como detectáveis (garante contagem de Java)
*.java linguist-detectable=true
*.java linguist-language=Java

# Ignora arquivos compilados e dependências
*.class linguist-detectable=false
*.jar linguist-detectable=false
/build/** linguist-detectable=false
/.gradle/** linguist-detectable=false
/out/** linguist-detectable=false

# Ignora arquivos de IDE
/.idea/** linguist-detectable=false
*.iml linguist-detectable=false

